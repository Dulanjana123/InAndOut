@model InAndOut.Models.ViewModels.ExpensesVM

<form method="post" asp-action="UpdatePost">
    <input asp-for="Expenses.Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Expenses.ExpenseName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expenses.Amount"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expenses.ExpenseType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Expenses.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expenses.ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Expenses.Amount" class="form-control" />
                        <span asp-validation-for="Expenses.Amount" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select asp-for="Expenses.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control" >
                            <option selected>--Select Expense Type--</option>
                        </select>
                        <span asp-validation-for="Expenses.ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@*client side validations*@
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial"/>}
}

